CREATE TABLE player_gk_advanced_stats (
player_name VARCHAR(255),
player_nation VARCHAR(255),
pos VARCHAR(255),
squad VARCHAR(255),
comp ENUM('UCL', 'Europa League', 'eng Premier League', 'es La Liga', 'it Serie A', 'de Bundesliga', 'fr Ligue 1'),

player_birthyear INT,

goals_allowed INT,
penalties_alllowed INT,
free_kicks_allowed INT,
corners_allowed INT,
own_goals INT,
PSxG DECIMAL(5, 2),
PSxG_per_SoT DECIMAL(5, 2),
PSxG_difference DECIMAL(5, 2),
long_passes_attempted INT,
long_pass_completion INT,
passes_attempted INT,
throws_attempted INT,
launch_percentage INT,
avg_pass_length DECIMAL(5, 2),
goal_kicks_attempted INT,
goal_kicks_long_percentage DECIMAL(5, 2),
goal_kick_len DECIMAL(5, 2),
crosses_attempted INT,
crosses_stopped INT,
stop_percentage DECIMAL(5, 2),
defensive_actions INT,
AvgDist DECIMAL(5, 2),
season INT,

PRIMARY KEY (player_name, player_nation, player_birthyear, comp),
FOREIGN KEY (player_name, player_nation, player_birthyear) REFERENCES Player_GK(name, nationality, year_born),
FOREIGN KEY (squad) REFERENCES Team(name)
)


